---
title: Color
eleventyNavigation:
    key: Color
    parent: Tokens
    order: 2
---
{% extends '../_includes/layout.njk' %}
{% from '../_includes/components/meta/color-swatch.njk' import render as colorSwatch %}

{% block content %}
{% for level in colorData %}
    <h2>{{ level.name }}</h2>
    {% for group in level.groups %}
        <h3>{{ group.name }}</h3>
        <div class="color-swatches__list">
            {% if group.colors %}
                {% for color in group.colors %}
                    {% set figmaName = level["prefix-figma"] + group["prefix-figma"] + color.name %}
                    {% set cssName = level["prefix-css"] + group["prefix-css"] + color.name %}
                    {{ colorSwatch(color.name, color.hex, figmaName, cssName) }}
                {% endfor %}
            {% endif %}
        </div>
    {% endfor %}
{% endfor %}
{% endblock %}