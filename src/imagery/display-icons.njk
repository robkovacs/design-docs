{% extends "layout.njk" %}

{% block content %}
<div class="display-icon-gallery">
    {{ displayIcon({ iconName: 'coffee' }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'green' }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'red' }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'yellow' }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'gray' }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'red-purple' }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'yellow-purple' }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'green-yellow' }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'blue-yellow' }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'blue-green' }) }}
</div>
<div class="display-icon-gallery display-icon-gallery--inverse">
    {{ displayIcon({ iconName: 'coffee', inverse: true }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'green', inverse: true }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'red', inverse: true }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'yellow', inverse: true }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'gray', inverse: true }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'red-purple', inverse: true }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'yellow-purple', inverse: true }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'green-yellow', inverse: true }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'blue-yellow', inverse: true }) }}
    {{ displayIcon({ iconName: 'coffee', color: 'blue-green', inverse: true }) }}
</div>
{% endblock content %}

{% set localCss %}
.display-icon-gallery {
    {# width: max-content; #}
    max-width: 100%;
    padding: 2rem;
}

.display-icon-gallery--inverse {
    background-color: var(--color-gray-900);
}
{% endset %}