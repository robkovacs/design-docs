{% extends '../_includes/layout.njk' %}

{%
    set cards = [
        {
            title: 'System icons',
            description: "System icons are pretty much the coolest thing you could ever imagine. What else do you need to know?",
            href: 'system-icons/'
        },
        {
            title: 'Display icons',
            description: "Display icons are everyone's favorite thing",
            href: 'display-icons/'
        }
    ]
%}

{% block content %}
    {% call grid({ alignItems: "stretch" }) %}
        {% for cardData in cards %}
            {% call gridCell({ spans: { xs: 12, sm: 6, lg: 3 } }) %}
                {{ indexCard({
                    href: cardData.href,
                    title: cardData.title,
                    description: cardData.description
                }) }}
            {% endcall %}
        {% endfor %}
    {% endcall %}
{% endblock %}