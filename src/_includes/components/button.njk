{% import './system-icon.njk' as systemIcon %}

{% macro render(content, class = '', variant = 'filled', leftIcon = '', rightIcon = '') %}
<button class="button {% if variant %}button--{{ variant }}{% endif %} {{ class }}">
    {% if (leftIcon) %}
        {{ systemIcon.render(leftIcon) }}
    {% endif %}
    <span>{{ content }}</span>
    {% if (rightIcon) %}
        {{ systemIcon.render(rightIcon) }}
    {% endif %}
</button>
{% endmacro %}