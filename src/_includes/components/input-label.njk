{% set localeData = {
    "en_US": {
        optional: "Optional"
    },
    "de_DE": {
        optional: "Freiwillig"
    }
} %}
{%- macro render(content, isRequired = true, forId = 'id', as = "label", locale = 'en_US') -%}
<{{ as }}
    class="input-label"
    {% if forId %}
        for="{{ forId | safe }}"
    {% endif %}
>
    {{ content }}
    {% if isRequired == false %}
        <span class="input-label__optional">{{ localeData[locale].optional }}</label>
    {% endif %}
</{{ as }}>
{% endmacro %}