{% macro render(trigger, content, inverse = false, placement = false, triggerType = 'block') %}

{% if (triggerType == 'string') %}
    <span class="tooltip__trigger tooltip__trigger--string">{{ trigger }}</span>
{% else %}
    {% set classes = 'tooltip__trigger' %}
    {{ trigger | addClass(classes) | safe }}
{% endif %}

<span class="tooltip__tooltip{% if (inverse) %} tooltip__tooltip--inverse{% endif %}">
    {{ content | safe }}
    <span class="tooltip__arrow"></span>
</span>
{% endmacro %}