{% macro render(name, hex, figmaName, cssName) %}
<div class="swatch">
    <div class="swatch__preview" style="background-color: {{ hex | safe }}"></div>
    <div class="h4 swatch__name">{{ name }}</div>
    <button class="swatch__button swatch__hex" data-to-copy="{{ hex | safe }}">Copy Hex</button>
    <button class="swatch__button swatch__figma-name" data-to-copy="{{ figmaName }}">Copy Figma</button>
    <button class="swatch__button swatch__css-name" data-to-copy="{{ cssName }}">Copy CSS</button>
</div>
{% endmacro %}