{% macro render(name, hex, figmaName, cssName) %}
<div class="swatch">
    <div class="swatch__preview" style="background-color: {{ hex | safe }}"></div>
    <div class="h4 swatch__name">{{ name }}</div>
    <button class="swatch__figma-name" data-to-copy="{{ figmaName }}">Figma variable</button>
    <button class="swatch__css-name" data-to-copy="{{ cssName }}">CSS variable</button>
</div>
{% endmacro %}