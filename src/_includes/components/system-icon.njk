{%- macro render(iconName, size = 'md', classes = '') -%}
{% set extraClasses %}
{# TODO: make this into a custom filter #}
    {% if classes %}
        {% if classes == (classes | string) %}
            {{ classes }}
        {% else %}
            {{ classes | join(' ') }}
        {% endif %}
    {% endif %}
{% endset %}
    <span class="system-icon system-icon--size-{{ size }} {{ extraClasses }}">
        {%- include '../../assets/img/system-icons/' + iconName + '.svg' -%}
    </span>
{%- endmacro -%}