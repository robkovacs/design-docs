{% set localJs %}
    /*
        Disable aria-disabled select boxes on this page
        Note that in real life there might be other earlier click events on here that these won't catch
    */
    let disabledSelectBoxes = document.querySelectorAll('.select-box[aria-disabled="true"]');
    
    disabledSelectBoxes.forEach((selectBox) => {
        selectBox.addEventListener('mousedown', (e) => {
            e.preventDefault();
            e.stopImmediatePropagation();
        });

        selectBox.addEventListener('keydown', (e) => {
            e.preventDefault();
            e.stopImmediatePropagation();
        });
    });

    /*
        Disable aria-disabled text boxes on this page
        Note that in real life there might be other earlier click events on here that these won't catch
    */
    let disabledTextBoxes = document.querySelectorAll('.text-box[aria-disabled="true"]');
    
    disabledTextBoxes.forEach((textBox) => {
        textBox.addEventListener('mousedown', (e) => {
            e.preventDefault();
            e.stopImmediatePropagation();
        });

        textBox.addEventListener('focus', (e) => {
            e.preventDefault();
            e.stopImmediatePropagation();
        });

        textBox.addEventListener('keydown', (e) => {
            e.preventDefault();
            e.stopImmediatePropagation();
        });
    });
{% endset %}