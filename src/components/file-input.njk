{% extends '../_includes/layout.njk' %}

{% block content %}
    <article>
        {% call stack() %}
            {{ fileInput({
                label: "Single file input"
            }) }}

            {{ fileInput({
                label: "Multiple file input",
                multiple: true
            }) }}

            {{ fileInput({
                label: "Only accepts a single PDF",
                helpText: "That is, a file with a name ending in <code>.pdf</code>, or a file of MIME type <code>application/pdf</code>",
                accept: "application/pdf, .pdf"
            }) }}
        {% endcall %}
    </article>
{% endblock %}