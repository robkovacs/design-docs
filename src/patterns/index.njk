{% extends '../_includes/layout.njk' %}

{%
    set cards = [
        {
            'title': 'Buttons and links',
            'description': "Buttons and links have different purposes, and thus different behaviors and uses.",
            'href': 'buttons-and-links/'
        },
        {
            'title': 'Empty states',
            'description': "Because sometimes you have a place for content, but no content to put there.",
            'href': 'empty-states/'
        },
        {
            'title': 'Loading states',
            'description': "Because sometimes content can't be shown right away.",
            'href': 'loading-states/'
        },
        {
            'title': 'Tabs and friends',
            'description': "We used to use tabs for a lot of different things. We shouldn't though.",
            'href': 'tabs-and-friends/'
        }
    ]
%}

{% block content %}
    {% call grid({ alignItems: "stretch", rowGap: "3xl" }) %}
        {% for cardData in cards %}
            {% call gridCell({ spans: { xs: 12, sm: 6, lg: 3 } }) %}
                {{ indexCard({
                    href: cardData.href,
                    title: cardData.title,
                    description: cardData.description
                }) }}
            {% endcall %}
        {% endfor %}
    {% endcall %}
{% endblock %}